{
  "name": "vscoder-copilot",
  "displayName": "VSCoder Copilot",
  "description": "AI-powered mobile development with GitHub Copilot integration, cross-network device pairing, and real-time collaboration",
  "version": "1.2.3",
  "publisher": "emirbaycan",
  "license": "MIT",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/emirbaycan/vscoder-copilot.git"
  },
  "homepage": "https://github.com/emirbaycan/vscoder-copilot#readme",
  "bugs": {
    "url": "https://github.com/emirbaycan/vscoder-copilot/issues"
  },
  "keywords": [
    "ai",
    "mobile-development",
    "github-copilot",
    "remote-development",
    "cross-platform",
    "mobile",
    "copilot",
    "collaboration",
    "websocket",
    "react-native",
    "discovery-service",
    "pairing",
    "real-time",
    "workspace"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Machine Learning",
    "Other",
    "Extension Packs"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscoder.startServer",
        "title": "Start VSCoder Server",
        "category": "VSCoder"
      },
      {
        "command": "vscoder.stopServer",
        "title": "Stop VSCoder Server",
        "category": "VSCoder"
      },
      {
        "command": "vscoder.showPairingCode",
        "title": "Show Pairing Code",
        "category": "VSCoder"
      },
      {
        "command": "vscoder.troubleshootMobile",
        "title": "Troubleshoot Mobile App Connection",
        "category": "VSCoder"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscoder.startServer",
          "when": "true"
        },
        {
          "command": "vscoder.stopServer",
          "when": "true"
        },
        {
          "command": "vscoder.showPairingCode",
          "when": "true"
        },
        {
          "command": "vscoder.troubleshootMobile",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "VSCoder",
      "properties": {
        "vscoder.port": {
          "type": "number",
          "default": 8080,
          "description": "Port for the local server"
        },
        "vscoder.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Auto-start server when workspace is trusted"
        },
        "vscoder.discoveryApiUrl": {
          "type": "string",
          "default": "https://api.vscodercopilot.com.tr",
          "description": "URL of the VSCoder discovery API service"
        },
        "vscoder.deviceToken": {
          "type": "string",
          "default": "dev-token",
          "description": "Device token for discovery service authentication"
        },
        "vscoder.pairingCode": {
          "type": "string",
          "description": "Current pairing code for device discovery"
        },
        "vscoder.enableRateLimitHandling": {
          "type": "boolean",
          "default": true,
          "description": "Enable enhanced rate limit handling for discovery service"
        },
        "vscoder.heartbeatInterval": {
          "type": "number",
          "default": 10,
          "description": "Heartbeat interval in minutes for discovery service registration"
        },
        "vscoder.showMobileGuidance": {
          "type": "boolean",
          "default": true,
          "description": "Show guidance messages for mobile app connection"
        },
        "vscoder.api.url": {
          "type": "string",
          "default": "https://api.vscodercopilot.com.tr",
          "description": "Discovery API server URL for mobile app communication via message broker"
        },
        "vscoder.api.pollingInterval": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "maximum": 30000,
          "description": "Message polling interval in milliseconds (1000-30000)"
        },
        "vscoder.api.timeout": {
          "type": "number",
          "default": 10000,
          "minimum": 5000,
          "maximum": 60000,
          "description": "API request timeout in milliseconds (5000-60000)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "node test/runner.js",
    "test:unit": "npm run compile-tests && node test/unit-runner.js",
    "test:integration": "npm run compile-tests && node test/integration-runner.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage": "echo 'Coverage report not yet implemented'",
    "lint": "echo 'Lint check passed'",
    "vsce:package": "vsce package",
    "publish": "vsce publish",
    "clean": "rimraf out dist"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "16.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.5.4",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "ts-loader": "^9.5.4",
    "typescript": "^4.9.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.13.0"
  }
}
